package br.com.java.testes;

import java.util.Calendar;
import java.util.GregorianCalendar;

import br.com.java.dao.ProprietarioDAO;
import br.com.java.entidades.Genero;
import br.com.java.entidades.Proprietario;

public class Testes {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		EntityManagerFactory emf = Persistence.createEntityManagerFactory("JPQL3");
		EntityManager em = emf.createEntityManager();
		
		CarrosDAO CDao = new CarrosDAO(em);	
		Carros entidade = new Carros("Fiat Mobi", "Fiat", 2016, new GregorianCalendar(2016, Calendar.JANUARY, 05), new BigDecimal(65000) ,Estado.SEMINOVO);
		
		
		CDao.Cadastrar(entidade);

		
		ProprietarioDAO PDao = new ProprietarioDAO(em);
		Proprietario entidade = new Proprietario("Francisco Lima", "61535152079", "franciscolima@outlook.com", 
				new GregorianCalendar(1965, Calendar.AUGUST, 16), new GregorianCalendar(2017, Calendar.JULY, 18), Genero.MASCULINO);
		
		PDao.Cadastrar(entidade);
		
	}

}
